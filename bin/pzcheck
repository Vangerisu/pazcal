#!/bin/bash

RESULT=""

while [ "$1" != "" ]; do
    case "$1" in
        *.pzc)
            prog=`basename "$1" .pzc`
            cat "$1" \
                | sed 's/^[[:blank:]]*PROGRAM[[:blank:]][[:blank:]]*[A-Za-z0-9_]*[[:blank:]]*([[:blank:]]*)/PROGRAM __pazcal__program ()/g' \
                > "$TMPDIR/$prog.cpp"
            RESULT="$RESULT $TMPDIR/$prog.cpp"
            shift
            ;;
        *)
            RESULT="$RESULT $1"
            shift
            ;;
    esac
done

printf "%s\n" "$RESULT"
exit 0
